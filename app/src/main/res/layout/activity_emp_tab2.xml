<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/empTab2"
    >
    <FrameLayout
        android:id="@+id/content"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.fgiet.incidentreporting.Users.Tab1">

    <Button
        android:id="@+id/btn_choose_image"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone"
        android:layout_gravity="left"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/selector_ic_add_a_photo_white_24dp"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:scaleType="fitStart"
        android:text="Select Image"
        android:textColor="@color/bg1_text"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_choose_image"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@color/authui_colorActivated" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/frame" />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="-6dp"
                android:layout_marginTop="-8dp"
                android:background="@color/colorTrans"
                app:srcCompat="@drawable/ic_cancel_black_24dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@color/authui_colorActivated" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/frame" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="-6dp"
                android:layout_marginTop="-8dp"
                android:background="@color/colorTrans"
                app:srcCompat="@drawable/ic_cancel_black_24dp" />
        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame3"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@color/authui_colorActivated" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/frame" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="-6dp"
                android:layout_marginTop="-8dp"
                android:background="@color/colorTrans"
                app:srcCompat="@drawable/ic_cancel_black_24dp" />
        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame4"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@color/authui_colorActivated" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/frame" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="-6dp"
                android:layout_marginTop="-8dp"
                android:background="@color/colorTrans"
                app:srcCompat="@drawable/ic_cancel_black_24dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame5"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@color/authui_colorActivated" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/frame" />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="-6dp"
                android:layout_marginTop="-8dp"
                android:background="@color/colorTrans"
                app:srcCompat="@drawable/ic_cancel_black_24dp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/linear"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/selector_ic_voice_black_24dp"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/description_optional"
            android:inputType="textMultiLine"
            android:maxHeight="150dp"
            android:padding="10dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:textColor="@color/bg1"
            android:textColorHint="@color/bg1_hint" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        android:paddingLeft="5dp"
        app:srcCompat="@drawable/ic_send_white_24dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
    </FrameLayout>
</android.support.v4.widget.NestedScrollView>